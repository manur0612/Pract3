@model Producto

<h1>Nuevo Producto</h1>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="Nombre"> </label>
        <input asp-for="Nombre" type="text" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="Foto"> </label>
        <input asp-for="Foto" type="text" class="form-control" required="required">
    </div>
        <div class="form-group">
        <label asp-for="Descripcion"> </label>
        <input asp-for="Descripcion" type="text" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="Precio"> </label>
        <input asp-for="Precio" type="int" class="form-control" required="required">
    </div>
        <div class="form-group">
        <label asp-for="Celular"> </label>
        <input asp-for="Celular" type="int" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="lugar"> </label>
        <input asp-for="lugar" type="text" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="Comprador"> </label>
        <input asp-for="Comprador" type="text" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" type="text" class="form-control" required="required"></select>
    </div>
    <button class="btn btn-primary">Registrar</button>
</form>